@using RazorPad.Web.Website.Extensions
<!DOCTYPE html>
<html>
<head>
    <title>RazorPad: The Online Razor Scratch Pad</title>
    <link href="@Url.Content("~/Content/css/core.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" language="javascript" src="@Url.Content("~/Scripts/jquery.js")"></script>
@RenderSection("Head", false)
</head>
<body>
    
    <div id="header" class="gradient ui-layout-north">
        <h1 class="insetType" title="The Online Razor Scratch Pad">
            @Html.RouteLink("RazorPad", "Home")
            <span class="beta">beta</span>
        </h1>

        @RenderSection("Actions", false)


        <ul id="login-actions" class="actions">
            @if (!User.Identity.IsAuthenticated)
            {
                if (ViewContext.RouteData.Values["action"].ToString().ToLower() != "login")
                {
                    <li>
                        <a href="@Url.Login()">Login / Signup</a>
                    </li>
                }
            }
            else
            {
                <li>Welcome, <strong>@User.Identity.Name</strong>
                    <a href="@Url.Logout()">Logout</a>
                </li>
            }
        </ul>
        <div class="clear"></div>
    </div>

    @RenderBody()

    @RenderSection("Tail", false)

    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-26932248-1']);
        _gaq.push(['_setDomainName', 'razorpad.net']);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>

</body>
</html>