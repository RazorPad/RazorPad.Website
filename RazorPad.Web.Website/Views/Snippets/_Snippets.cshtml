@model RazorPad.Web.Website.Models.UserSnippetsViewModel
@{
    var showCreatedBy = Model.Username == "anonymous";
}
@foreach(var snippet in Model.Snippets)
{
    <div class="snippet" data-key="@snippet.Key">
        <span class="title"><a href="#">@snippet.DisplayName</a></span>
        <span class="notes" title="@snippet.Notes">@snippet.Notes</span>
        <div>
            <span class="create-date">@snippet.DisplayDate</span>
            @if (showCreatedBy)
            {
                <span class="created-by">@snippet.CreatedBy</span>
            }
            <div class="clear clearfix"></div>
        </div>
    </div>
}
