@model RazorPad.Web.Website.Areas.Account.Models.CreateNewUserRequest 
<div class="form">
    <div class="form-box">
        <div class="box">
            <h2>Sign Up</h2>

            @using(Html.BeginForm("Register", "Registration")) {

                @Html.ValidationSummary(true)
                
                @Html.Partial("_NewUserInfo", Model)
                
                <div>
                    @Html.Label("Password")
                    @Html.Password("Password")
                    @Html.ValidationMessage("Password")
                </div>                

                <div>
                    <label for="PasswordConfirm">Confirm Password</label>
                    @Html.Password("PasswordConfirm")
                    @Html.ValidationMessage("PasswordConfirm")
                </div>                


                <div class="form-button">
                    <input type="submit" id="signUpBtn" value="Sign Up" />
                </div>
            }
        </div>
    </div>
    <div class="clear clearfix">
    </div>
</div>
